<ul id="well">
  <li>Movie: <%= @showtime.movie.title %></li>
  <li>Showtime: <%= @showtime.start_time %></li>
</ul>
<%= form_for [:showtime, @ticket_order], :html => {:class=>"form-horizontal center", :role=>"form"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class:"control-label col-sm-2" %>
    <%= f.text_field :first_name %><br />
  </div>
  <div class="form-group">
    <%= f.label :last_name, class:"control-label col-sm-2" %>
    <%= f.text_field :last_name %><br />
  </div>
  <div class="form-group">
    <%= f.label :email, class:"control-label col-sm-2" %>
    <%= f.text_field :email %><br />
  </div>
  <div class="form-group">
    <%= f.label :cc_number, class:"control-label col-sm-2" %>
    <%= f.text_field :cc_number %><br />
  </div>
  <div class="form-group">
  <%= f.label :expiry, 'Expiration date' , class:"control-label col-sm-2" %><br />
  <%= f.date_select :expiry, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :use_month_numbers => true %><br />
  </div>
  
  <%= f.submit "Buy the Movie Ticket" %>
<% end %>